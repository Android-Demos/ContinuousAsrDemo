<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">
	<EditText android:id="@+id/edit_text" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:gravity="top|left"
		android:layout_marginTop="80dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:padding="8dip"
		android:hint="欢迎使用科大讯飞语音输入"
		android:background="@drawable/input" 
		android:minLines="8" 
		android:maxLines="8" />
	<FrameLayout android:id="@+id/framelayout"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="horizontal"
		android:gravity="center_horizontal">
		<ImageView android:id="@+id/image_outter"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="centerInside"
			android:layout_gravity="center"/>
		<ImageView android:id="@+id/image_cancel"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_gravity="right"
			android:layout_marginTop="118dip"
			android:layout_marginRight="20dip"
			android:src="@drawable/circle_cancel"/>
		<TextView android:id="@+id/tx_clear"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:layout_marginRight="10dp"
			android:textSize="20dp"
			android:text="清除"
			/>
		<ImageView android:id="@+id/image_load"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="centerInside"
			android:layout_gravity="center"
			android:src="@drawable/circle_load"/>
		<Button android:id="@+id/btn_recognize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/mic"
			android:layout_gravity="center"/>
	</FrameLayout>
</LinearLayout>
